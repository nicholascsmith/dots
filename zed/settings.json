{
  // Core
  "base_keymap": "VSCode",
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },

  // Appearance
  "ui_font_size": 16,
  "buffer_font_size": 15,
  "tab_size": 2,
  "theme": {
    "light": "One Light",
    "dark": "Gruvbox Dark"
  },
  "scrollbar": {
    "show": "never"
  },
  "soft_wrap": "editor_width",
  "preferred_line_length": 120,
  "wrap_guides": [120],
  "indent_guides": {
    "coloring": "indent_aware"
  },

  // Editing
  "format_on_save": "on",
  "formatter": "prettier",
  "ensure_final_newline_on_save": true,
  "remove_trailing_whitespace_on_save": true,
  "autosave": "on_focus_change",
  "inlay_hints": {
    "enabled": true
  },

  // Terminal
  "terminal": {
    "font_size": 12,
    "shell": {
      "program": "bash"
    }
  },
  "restore_on_startup": "last_workspace",
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false
  }
}
